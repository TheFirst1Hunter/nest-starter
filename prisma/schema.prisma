generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String
  password String
  Post     Post[]
}

model Post {
  id String @id @default(uuid())

  title   String
  content String

  author User   @relation(fields: [userId], references: [id])
  userId String
}
